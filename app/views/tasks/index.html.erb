<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Employee</th>
    <th>Activity</th>
    <th>Date</th>
    <th>Description</th>
    <th>Hours spent</th>
  </tr>

<% for task in @tasks %>
  <tr>
    <td><%=h task.project_id %></td>
    <td><%=h task.employee_id %></td>
    <td><%=h task.activity_id %></td>
    <td><%=h task.date %></td>
    <td><%=h task.description %></td>
    <td><%=h task.hours_spent.format_h %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>
