<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
"http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <title><%= yield(:title) || 'Timetrack' %></title>
    <meta http-equiv="Content-Type" http-equiv="text/html; charset=utf-8" />
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'calendar/calendar', 'calendar/calendar-setup', 'calendar/calendar-lt-utf8', 'swfobject' %>
    <%= stylesheet_link_tag 'calendar-custom' %>
  </head>
  
  <style>
    .notice {
      color: green;
    }
  </style>
  <body>
    
    <div id="toolbar">
      
      <h1>MakeIT Time</h1>
      <ul>
        <li class="active"><a href="/">Mano laikas</a></li>
        <li><a href="/employees">Darbuotojai</a></li>
        <li><a href="/projects">Projektai</a></li>
        <li><a href="/sectors">Skyriai</a></li>
        
        <li class="last"><a href="/logout">Atsijungti</a></li>
      </ul>
      <div class="clear"></div>
    </div>
    
    <div id="content">
      <%= render :partial => 'shared/notices' %>
      <%= yield %>
    </div>    
  </body>
</html>
