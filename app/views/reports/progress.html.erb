<h2>Nebaigto darbo vertės ataskaita</h2>

<% remote_form_for "period", :url => { :action => 'progress' }, :update => 'report',
  :loading => "$('loading').show();", :complete => "$('loading').hide();" do |f| %>
  <p>
  Pasirinkite laikotarpius: 
  <%= f.select :periods, [['Metai', 'years'], ['Ketvirčiai', 'quarters'], ['Mėnesiai', 'months']] %>
  <%= f.submit 'Parodyti ataskaitą' %> <%= loader %>
  </p>
<% end %>

<div id="report"></div>

<a href="#" onclick="history.go(-1); return false;">&laquo; Grįžti atgal</a>